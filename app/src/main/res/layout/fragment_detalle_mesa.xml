<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.nicatec.restaurante.fragment.DetalleMesaFragment">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/nombre_mesa"
                android:layout_width="wrap_content"
                android:paddingBottom="@dimen/padding_detalle"
                android:paddingLeft="@dimen/padding_detalle"
                android:paddingRight="@dimen/padding_detalle"
                android:paddingTop="@dimen/padding_detalle"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/add_button"
                android:text="@string/add_plato"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>



        <ListView
            android:id="@+id/list"
            android:layout_alignTop="@id/add_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></ListView>


    </LinearLayout>

</LinearLayout>
